import random
import string

def generar_contraseÃ±a(longitud=12, usar_mayusculas=True, usar_numeros=True, usar_simbolos=True):
    caracteres = string.ascii_lowercase  # Letras minÃºsculas
    
    if usar_mayusculas:
        caracteres += string.ascii_uppercase  # Letras mayÃºsculas
    if usar_numeros:
        caracteres += string.digits  # NÃºmeros (0-9)
    if usar_simbolos:
        caracteres += string.punctuation  # SÃ­mbolos (!@#$%^&*...)
    
    if not caracteres:
        return "Error: Debes habilitar al menos un tipo de carÃ¡cter."
    
    contraseÃ±a = ''.join(random.choice(caracteres) for _ in range(longitud))
    return contraseÃ±a

